{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "~interfaces/*": ["./src/interfaces/*"]
    }
  },
  "include": [
    "app",
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/webview",
    "src/index.tsx"
  ]
}
